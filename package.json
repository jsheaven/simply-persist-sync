{
  "name": "simply-persist-sync",
  "type": "module",
  "version": "1.1.2",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "description": "Isomorphic, synchronous object key/value persistence layer (browser, server) with in-memory, browser and fast, free-tier serverless backend providers",
  "keywords": [
    "server-side",
    "client-side",
    "persistency",
    "storage",
    "js",
    "localStorage",
    "sessionStorage",
    "in-memory"
  ],
  "repository": {
    "url": "git+https://github.com/jsheaven/simply-persist-sync.git",
    "type": "git"
  },
  "scripts": {
    "pretest": "yarn build --dev",
    "integration": "node ./example/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --enable-source-maps --no-warnings' jest --verbose --coverage ./test/*.test.ts",
    "clean": "rm -rf ./dist && rm -rf ./coverage",
    "prebuild": "yarn clean",
    "build": "yarn node --enable-source-maps ./build.mjs"
  },
  "author": "Aron Homberg <info@aron-homberg.de>",
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.esm.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "runtime-info": "^1.0.1"
  },
  "devDependencies": {
    "@jsheaven/easybuild": "1.2.9",
    "jest": "^29.4.1",
    "ts-jest": "next",
    "typescript": "^4.9.5",
    "@types/jest": "^29.4.0",
    "gzip-size-cli": "^5.1.0",
    "jsdom": "^21.1.0",
    "global-jsdom": "^8.7.0",
    "dotenv": "^16.0.3"
  }
}
